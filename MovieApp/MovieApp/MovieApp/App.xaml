<?xml version="1.0" encoding="utf-8" ?>
<prism:PrismApplication xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Unity;assembly=Prism.Unity.Forms"
             x:Class="MovieApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="layoutStyle" TargetType="StackLayout">
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                <Setter Property="VerticalOptions" Value="FillAndExpand" />
                <Setter Property="BackgroundColor" Value="Coral" />
            </Style>
            <Style x:Key="labelMovieTileStyle" TargetType="Label">
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>
        </ResourceDictionary>

        <DataTemplate x:Key="movieItemTemplate">
            <Frame BackgroundColor="#1D212B" Margin="5" Padding="0" HorizontalOptions="Center" HasShadow="True" CornerRadius="10">
                <StackLayout VerticalOptions="FillAndExpand">
                    <Image Source="{Binding PosterPath}" Aspect="Fill" />
                    <StackLayout Padding="5,0,5,15">
                        <Label Style="{StaticResource labelMovieTileStyle}" Text="{Binding Title}" TextColor="White" />
                        <Label Style="{StaticResource labelMovieTileStyle}" Text="☆ ☆ ☆ ☆ ☆" TextColor="Yellow" />
                    </StackLayout>
                </StackLayout>
            </Frame>
        </DataTemplate>

	</Application.Resources>
</prism:PrismApplication>